{% macro card(post) %}<div class="cardy boxy">
    <a class="cardy boxy post-card{% if post.featured %}  post-card-featured{% endif %}" href="{{ post.url }}">

            {% if post.feature_image %}
                <img class="post-card-image grayscale" style="border-top-left-radius: 20px !important;
border-top-right-radius: 20px !important;" src="{{ post.feature_image }}" alt="{{ post.title }}">
            {% endif %}
              <header class="post-card-header">
            <div class="post-card-tags">
                {% if post.tags %}{% for tag in post.tags %}{{ tag.name }} {% endfor %}{% endif %}  </div>            <div class="reading-time-container">   <div class="reading-time">{{ post.html | safe | getReadingTime }} min read</div></div>


            <h2 class="post-card-title effect-shine">
                {{ post.title }}
            </h2>
        </header>
        <div class="post-card-excerpt">
            <p>{{ post.excerpt }}</p>
             <div class="btnbox">Read On
            </div>
        </div>
        <footer class="post-card-footer">
            <div class="post-card-footer-left">
                {% if post.primary_author.profile_image %}
                <div class="post-card-avatar">
                    <img
                        class="author-profile-image"
                        src="{{ post.primary_author.profile_image }}"
                        alt="{{ post.primary_author.name }}"
                    />
                </div>
                {% endif %}
                <span class="author">{{ post.primary_author.name }}</span>
            </div>


        </footer>
    </a></div>
{% endmacro %}
